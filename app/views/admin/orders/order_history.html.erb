<h2><%= @order.customer.last_name+@order.customer.first_name %>さんの注文履歴一覧</h2>
  <table>
   <thead>
    <tr>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
   </thead>
     <tbody>
<% @orders.each do |order| %>
   <tr>
    <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
    <td><%= order.order_items.quantity %></td>
    <td><%= Order.statuses_i18n[order.status] %></td>
  </tr>
  </tbody>
  <%= paginate post_images %>
<% end %>
</table>