<div class='container'>
  <div class='row'>
    <div class='col'>
     <h2>注文履歴詳細</h2>
     <table>
      <tr>
        <td>購入者</td>
        <td><%= @order.customer.last_name+@order.customer.first_name %></td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td></td><%= @order.created_at %></td>
      </tr>
      <tr>
        <td>支払い方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td>注文ステータス</td>
        <td><%= form_with model: @order, url: admin_order_path(@order.id) do |form| %>
            <%= form.select :status, [['入金待ち', 0], ['入金確認', 1], ['製作中', 2], ['発送準備中', 3], ['発送済み', 4]], { include_blank: true, selected: 0 } %>
        </td>
        <td>
        <%= form.submit '更新', class: "btn btn-success" %>
        </td>
        <% end %>
       </tr>
     </table>
   </div>
 </div><br><br>
  <div class='row'>
    <div class='col-sm'>
  <table>
   <thead>
    <tr>
      <th>商品名</th>
      <th>単価</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th colspan="1"></th>
    </tr>
   </thead>
     <tbody>
<% @order_items.each do |order_item| %>
   <tr>
    <td><%= order_item.item.name %></td>
    <td><%= order_item.purchase_price %></td>
    <td><%= order_item.quantity %></td>
    <td><%= order_item.quantity*order_item.purchase_price %></td>
    <td><%= form_with model: order_item, url: admin_order_item_path(order_item.id) do |f| %>
        <%= f.select :item_status, [['着手不可', 0], ['製作待ち', 1],['製作中', 2],['製作完了', 3]], { include_blank: true, selected: 0 } %>
    </td>
    <td><%= f.submit '更新', class: "btn btn-success" %></td>
        <% end %>
   </tr>
<% end %>
  </tbody>
</table>
</div>
  </div>
</div>