<div class='container' >
  <div class='row'>
    <div class='col'>
     <table>
      <thead>
<h2><%= @customer.last_name+@customer.first_name %>さんの会員詳細</h2>
  </thead>
  <tbody>
   <tr>
     <td>会員ID</td>
     <td><%= @customer.id %></td>
   </tr>
   <tr>
     <td>氏名</td>
     <td><%= @customer.last_name+" "+@customer.first_name %></td>
   </tr>
   <tr>
     <td>フリガナ</td>
     <td><%= @customer.last_name_kana+" "+@customer.first_name_kana %></td>
   </tr>
   <tr>
     <td>郵便番号</td>
     <td><%= @customer.postcode %></td>
   </tr>
   <tr>
     <td>住所</td>
     <td><%= @customer.address %></td>
   </tr>
   <tr>
     <td>電話番号</td>
     <td><%= @customer.telephone_number %></td>
   </tr>
   <tr>
     <td>メールアドレス</td>
    <td><%= @customer.email %></td>
   </tr>
   <tr>
    <td>会員ステータス</td>
    <td><% if @customer.is_active %>
    有効
   <% else %>
   退会済み
    <% end %></td>
  </tr>
  </tbody>
</table>

<div>
<%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
|
<%= '注文一覧を見る'%>
</div>
</div>
</div>
</div>
