<div class="container">
  <h2>商品詳細</h2>
    <div class="row">
      <div class="col-md-3 mr-5">
        <%= image_tag @item.get_profile_image(300,300) %>
          </div>
          <div class="col-xs-2 col-md-7">
          <table>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.explanation %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格<br>(税抜価格)</td>
              <td><%= (@item.with_tax_price.floor).to_s(:delimited) %>
                  (<%= @item.tax_out_price.to_s(:delimited) %>)
              　　円
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <% if @item.is_onsele == true %>
              <td><%= "販売中" %></td>
              <% else %>
              <td><%= "販売停止中" %></td>
              <% end %>
            </tr>
        </table>
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success mt-5" %>
        </div>
    </div>
</div>