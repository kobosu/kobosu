<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <tr>
        <th=>名前</th>
        <td class="field"><%= f.label :last_name）%></td>
        <td><%= f.text_field :last_name, autofocus: true %></td>
        <td class="field"><%= f.label :first_name）%></td>
        <td><%= f.text_field :first_name, autofocus: true %></td>
  </tr>
  
  <tr>
        <th=>フリガナ</th>
        <td class="field"><%= f.label :last_name_kana %></td>
        <td><%= f.text_field :last_name_kana, autofocus: true %></td>
        <td class="field"><%= f.label :first_name_kana %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true %></td>
  </tr>
  
   <tr>
        <th=>郵便番号</th>
        <td class="field"><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postcode, autofocus: true %></td>
   </tr>
   <tr>
        <th=>住所</th>
        <td class="field"><%= f.label :住所 %></td>
        <td><%= f.text_field :address, autofocus: true %></td>
   </tr>
   
   <tr>
        <th=>電話番号</th>
        <td class="field"><%= f.label :telephone_number %></td>
        <td><%= f.text_field :telephone_number, autofocus: true %></td>
   </tr>
   <tr>
    <td class="field"><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
   </tr>
   <tr>
    <td class="field"><%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
   </tr>
   
   <tr>
    <td class="field">
    <%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
