
<div class='container'>
  <div class='row'>
    <div class='col text-center'>
      <%= stylesheet_link_tag 'registrations' %>
<h2>新規会員登録</h2>

<%= form_with model:@customer,url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <table>
  <tr>
        
        <td class="field"><%= f.label :last_name %></td>
        <td><%= f.text_field :last_name, autofocus: true ,:placeholder =>"山田"%></td>
        <td class="field"><%= f.label :first_name %></td>
        <td><%= f.text_field :first_name, autofocus: true,:placeholder =>"太郎" %></td>
  </tr>
  
  <tr>
        
        <td class="field"><%= f.label :last_name_kana %></td>
        <td><%= f.text_field :last_name_kana, autofocus: true, :placeholder =>"ヤマダ" %></td>
        <td class="field"><%= f.label :first_name_kana %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, :placeholder =>"タロウ" %></td>
  </tr>
  
   <tr>
        
        <td class="field"><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postcode, autofocus: true , :placeholder =>"000000" %></td>
   </tr>
   <tr>
        
        <td class="field"><%= f.label :住所 %></td>
        <td><%= f.text_field :address, autofocus: true, :placeholder =>"東京都渋谷区" %></td>
   </tr>
   
   <tr>
        <td class="field"><%= f.label :telephone_number %></td>
        <td><%= f.text_field :telephone_number, autofocus: true, :placeholder =>"000000" %></td>
   </tr>
   <tr>
    <td class="field"><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"test@test.com" %></td>
   </tr>
   <tr>
    <td class="field"><%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
   </tr>
   
   <tr>
    <td class="field">
    <%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
</table>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %>
</div>
  </div>
</div>
