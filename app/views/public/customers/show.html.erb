<h1>Customers#show</h1>
<p>Find me in app/views/customers/show.html.erb</p>

<h2><%= @customer.last_name+@customer.first_name %>さんの会員詳細</h2>
<table>
  <tbody>
   <tr>
     <td>会員ID</td>
     <td><%= @customer.id %></td>
   </tr>
   <tr>
     <td>氏名</td>
     <td><%= @customer.last_name+" "+@customer.first_name %></td>
   </tr>
   <tr>
     <td>フリガナ</td>
     <td><%= @customer.last_name_kana+" "+@customer.first_name_kana %></td>
   </tr>
   <tr>
     <td>郵便番号</td>
     <td><%= @customer.postcode %></td>
   </tr>
   <tr>
     <td>住所</td>
     <td><%= @customer.address %></td>
   </tr>
   <tr>
     <td>電話番号</td>
     <td><%= @customer.telephone_number %></td>
   </tr>
   <tr>
     <td>メールアドレス</td>
    <td><%= @customer.email %></td>
   </tr>
   <tr>
    <td>会員ステータス</td>
    <td><%= @customer.is_active %></td>
  </tr>
  </tbody>
</table>

<div>
<%= link_to "編集する", edit_customer_path(@customer.id) %>
