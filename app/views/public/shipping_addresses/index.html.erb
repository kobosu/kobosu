<div class='container'>
  <div class='row'>
    <div class='col text-center'>
<h2>配送先登録/一覧</h2>

<%= form_with model: @new do |f| %>
<div class="form-group">
  <p for="shipping_address_postcode">郵便番号(ハイフンなし) </p>
  <%= f.text_field :postcode, placeholder: "0000000" %>
  </div>

  <div class="form-group">
  <p for="shipping_address_address">住所</p>
  <%= f.text_area :address, placeholder: "兵庫県西宮市" %>
  </div>

    <div class="form-group">
  <p for="shipping_address_name">宛名</p>
  <%= f.text_area :name, placeholder: "コボス"  %>
  </div>

  <div class="form-group">
  <%= f.submit '新規登録', class: "btn btn-success" %>
  </div>
<% end %>
</div>

<div class='col text-center'>
<table border="1" style="border-collapse: collapse"> 
   <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="2"></th>
    </tr>
   </thead>
<% @shipping_addresses.each do |shipping_address| %>
<tbody>
   <tr>
    <td><%= shipping_address.postcode %></td>
    <td><%= shipping_address.address %></td>
    <td><%= shipping_address.name %></td>
    <td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id), class: "btn btn-sm btn-success" %>
        <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %></td>
   </tr>
  </tbody>
<% end %>
</table>
</div>

  </div>
</div>