<div class='container'>
  <div class='row'>
     <table class ="table table-borderless">
       <td width = "15%"><p style="background-color:#EEEEEE;">ショッピングカート</p></td>
       <td width = "63%"> </td>
       <td></td>
       <td>
       <%= button_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "カート内を空にしますか？", class: "btn btn-sm btn-danger" %>
       </td>
     </table>
   </div>
 <div>
    <table class ="table table-bordered">
   <tr>
    <th class = "text-center" >商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th colspan="1"></th>
   </tr>

   <% @cart_items.each do |cart_item|%>
    <tr>
     <td><%= image_tag cart_item.item.get_profile_image(200,50) %><%= cart_item.item.name %></td>
     <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
     <td width = "11%">
     <%= form_with model: cart_item do |f| %>
     <%= f.select :quantity, [*(1..10)], {include_blank: '個数選択'} %>
     <%= f.submit "変更" %>
     <% end %>
     </td>
     <td><%= cart_item.subtotal.to_s(:delimited) %></td>
     <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: '本当に削除しますか?' } %></td>
      <% @total += (cart_item.item.with_tax_price).floor * cart_item.quantity %>
    </tr>
   <% end %>
  </table>
  <div class = "pt-4" >
  <table>
   <tr>
    <td width = "77%"><%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %></td>
     <td width = "3%"><td><h3>合計金額</h3>
     <td><h4>￥<%= @total.to_s(:delimited) %></h4></td>
   </tr>
  </table>
  </div>

  <p class ="text-center my-5">
    <% unless @cart_items.count == 0 %>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %></p>
    <% end %>
 </div>
</div>