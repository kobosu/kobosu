<div class='container'>
  <div class='row'>
    <div class='col text-center'>
<h3>ショッピングカート</h3>

 <table>
  <thead>
   <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th colspan="1"></th>
   </tr>
  </thead>

  <%= button_to "カートを空にする", destroy_all_path, method: :delete %>

  <tbody>
   <% @cart_items.each do |cart_item|%>
    <tr>
     <td><%= image_tag cart_item.item.get_profile_image(50,50) %><%= cart_item.item.name %></td>
     <td><%= cart_item.item.with_tax_price %></td>
     <%= form_with model: cart_item do |f| %>
     <td><%= f.select :quantity, [*(1..10)], {include_blank: '個数選択'} %>
     <%= f.submit "変更" %></td>
     <% end %>
     <td><%= cart_item.subtotal %></td>
     <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      <% @total += (cart_item.item.with_tax_price).floor * cart_item.quantity %>
    </tr>
   <% end %>
  </tbody>
 </table>
<table>
 <td>合計金額</td>
 <td><%= @total %></td>
</table>
  <%= link_to "買い物を続ける", items_path %>
  <%= link_to "情報入力に進む", new_order_path %>
  </div>
  </div>
</div>