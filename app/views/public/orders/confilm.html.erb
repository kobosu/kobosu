<h2>注文情報確認</h2>

　　　<table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.tax_out_price %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= (cart_item.item.tax_out_price * 1.1).floor * cart_item.quantity %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

<table class="table table-hover">
        <thead>
          <tr>
            <th>送料</th>
            <th><%= @postage %></th>
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= @all_order_price.to_s(:delimited) %></td>
            <td>請求金額</td>
            <td><%= @total_price.to_s(:delimited) %></td>
          </tr>
        </tbody>

      <label>支払方法</label>
      　<%= @order.payment_method %>
      <label>お届け先</label>
      　〒<%= @order.postcode + @order.address + @order.name %>

      <%= form_with model: @order, url: order_path, method: :post do |f| %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :billing_amount, :value => @total_price %> %>
        <%= f.hidden_field :postcode %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :postage, :value => @postage %>
        <%= f.select "注文を確定する" %>
      <% end %>