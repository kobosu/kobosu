<h2>注文履歴一覧</h2>
  <table>
   <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
   </thead>
     <tbody>
<% @orders.each do |order| %>
   <tr>
    <td><%= order.created_at %></td>
    <td><%= order.customer.postcode %><br>
    <%= order.customer.address %><br>
    <%= order.customer.name %></td>
    <td><% order.order_items.each do |order_items| %>
        <%= order_items.item.name %><% end %></td>
    <td><%= order.billing_amount %></td>
    <td><%= Order.statuses_i18n[order.status] %></td>
    <td><%= link_to '更新', order_path(order.id) class: "btn btn-success" %></td>
  </tr>
  </tbody>
<% end %>
</table>
