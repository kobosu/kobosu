<h1>ジャンル追加・一覧</h1>
<%= form_with model: @genre, url: '/admin_genres', method: :post do |f| %>
 <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<body>
<main>
 <table>
  <thead>
   <tr>
    <th>ジャンル</th>
    <th colspan="1"></th>
   </tr>
  </thead>

  <tbody>
   <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to '編集する', edit_admin_genres_path(genre) %></td>
    </tr>
  </tbody>
 </table>
</main>
</body>
