  <h2>商品一覧
  (全<%= Item.where(is_onsele: true).count %>件)
  </h2>

  　<table class="table table-hover">
  　   <tbody>
  　     <% @items.each do |item| %>

          <tr>
            <th><%= link_to item_path(item.id) do %>
                <%= image_tag item.get_profile_image(100,100) %>
                <% end %>
            </th>
            <th><%= link_to item.name, item_path(item.id) %></th>
            <th>￥<%= item.with_tax_price.to_s(:delimited) %></th>
            <th> </th>
          </tr>
          <% end %>

      </tbody>
    </table>
   <%= paginate @items %>


